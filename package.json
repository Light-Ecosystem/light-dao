{
  "name": "light-dao-contracts",
  "version": "1.0.0",
  "description": "Light DAO base contracts",
  "main": "index.js",
  "license": "GPL-3.0",
  "scripts": {
    "build": "hardhat compile --typecheck",
    "build:ts": "yarn rimraf dist && tsc",
